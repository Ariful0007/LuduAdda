<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="150dp"
                    android:src="@drawable/man__new"


                    app:civ_border_color="@color/com6"
                    app:civ_border_width="2dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/name_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:text="Name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:background="@color/com6"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/nameTv"
                    android:layout_marginTop="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/toolbar1"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </RelativeLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:padding="4dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <androidx.cardview.widget.CardView
                        android:id="@+id/referCard"
                        android:layout_width="0dp"
                        android:onClick="withdraal"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#fff"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginLeft="0dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:foregroundTint="@color/white"
                                android:layout_width="50dp"
                                android:id="@+id/image4"
                                android:layout_marginTop="20dp"
                                android:layout_alignParentRight="false"
                                android:layout_height="@dimen/space_50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="false"
                                android:background="@drawable/wall" />


                            <TextView
                                android:layout_below="@id/image4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="false"
                                android:padding="8dp"
                                android:layout_marginLeft="0dp"
                                android:textSize="10dp"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="My Wallet"
                                android:gravity="center_horizontal" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:visibility="visible"
                        android:id="@+id/watchCard"
                        android:onClick="deposite"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#fff"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginLeft="0dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:foregroundTint="@color/white"
                                android:layout_width="50dp"
                                android:id="@+id/image5"
                                android:layout_marginTop="20dp"
                                android:layout_alignParentRight="false"
                                android:layout_height="@dimen/space_50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="false"
                                android:background="@drawable/deposite" />


                            <TextView
                                android:layout_below="@id/image5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="false"
                                android:padding="8dp"
                                android:layout_marginLeft="0dp"
                                android:textSize="10dp"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="Deposite Coin"
                                android:gravity="center_horizontal" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:visibility="visible"
                        android:id="@+id/watchCard22"

                        android:onClick="history"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#fff"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginLeft="0dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:foregroundTint="@color/white"
                                android:layout_width="50dp"
                                android:id="@+id/image51"
                                android:layout_marginTop="20dp"
                                android:layout_alignParentRight="false"
                                android:layout_height="@dimen/space_50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="false"
                                android:background="@drawable/payment_history" />


                            <TextView
                                android:layout_below="@id/image51"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="false"
                                android:padding="8dp"
                                android:layout_marginLeft="0dp"
                                android:textSize="10dp"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="Payment History"
                                android:gravity="center_horizontal" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>




            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/namfeTv"
                    android:layout_marginTop="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/toolbar1"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </RelativeLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <View android:layout_width="match_parent"
                    android:layout_height="@dimen/view_width_small"
                    android:background="@color/grey_light"
                    android:layout_marginTop="30dp"/>
                <LinearLayout
                    android:id="@+id/pinupgrade"
                    android:layout_marginRight="21dp"
                    android:layout_marginLeft="21dp"
                    android:background="@color/com6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/password2"/>

                    <TextView
                        android:id="@+id/emailview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        style="@style/fonts"
                        android:text="Change password\nUpdate your password "
                        android:textColor="#fff"/>

                </LinearLayout>


                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_width_small"
                    android:background="@color/grey_light"
                    android:layout_marginTop="2dp"/>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/upgradetrans"
                    android:layout_marginRight="21dp"
                    android:layout_marginLeft="21dp"
                    android:background="@color/com6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/password2"/>

                    <TextView
                        android:id="@+id/mobileview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        style="@style/fonts"
                        android:text="Change password\nUpdate account pin "
                        android:textColor="#fff"/>

                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="@dimen/view_width_small"
                    android:visibility="gone"
                    android:background="@color/grey_light"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
            <Button
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/register_now"
                android:text="Log Out "
                android:textColor="@color/white"

                android:onClick="myregister"
                android:backgroundTint="@color/com6"
                />

        </LinearLayout>



    </RelativeLayout>
</ScrollView>