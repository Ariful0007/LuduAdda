<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="@dimen/space_5dp"
    android:layout_marginTop="@dimen/space_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view8"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="5dp"

            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"



                    >

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="@dimen/space_5dp"
                        android:src="@drawable/updateapps"
                        android:scaleType="centerCrop"
                        android:id="@+id/imageii1"
                        ></ImageView>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="false"
                        android:padding="8dp"
                        android:id="@+id/nametext"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"

                        android:textSize="15dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Game Name"
                        android:gravity="center_horizontal" />
                    <TextView
                        android:layout_below="@id/nametext"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="false"
                        android:padding="8dp"
                        android:id="@+id/secondimage"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="0dp"

                        android:textSize="10dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Game Time"
                        android:gravity="center_horizontal" />
                    <LinearLayout
                        android:layout_marginTop="89dp"
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/redeemCard"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"

                            >
                            <TextView
                                android:layout_marginRight="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:textAlignment="center"


                                android:layout_marginTop="@dimen/space_15dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:fontFamily="@font/open_sans_semibold"
                                android:text="Total Prize"
                                android:layout_marginLeft="20dp"

                                android:textSize="15dp" />
                            <TextView
                                android:id="@+id/balance"

                                android:textAlignment="center"
                                android:layout_marginTop="0dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                android:text="0"
                                ></TextView>
                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"

                            >
                            <TextView
                                android:layout_marginRight="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"

                                android:textAlignment="center"
                                android:layout_marginTop="@dimen/space_15dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:fontFamily="@font/open_sans_semibold"
                                android:text="Entry Fee"
                                android:layout_marginLeft="20dp"

                                android:textSize="15dp" />
                            <TextView
                                android:id="@+id/invalid"
                                android:textAlignment="center"
                                android:layout_marginTop="0dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="0"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                ></TextView>
                        </LinearLayout>
                    </LinearLayout>
                    //
                    <LinearLayout
                        android:layout_marginBottom="@dimen/space_10dp"
                        android:layout_marginTop="295dp"
                        android:id="@+id/linearL11ayout11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/rede11emCard1"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"

                            >

                            <Button
                                android:id="@+id/details"

                                android:textAlignment="center"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textSize="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/bordd"
                                android:text="How to join Ludo room"
                                ></Button>
                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"

                            >

                            <Button
                                android:id="@+id/viewprice"
                                android:textAlignment="center"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="View prize details"
                                android:textSize="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/bordd"
                                ></Button>
                        </LinearLayout>
                    </LinearLayout>
                    //
                    <LinearLayout
                        android:layout_marginTop="155dp"
                        android:id="@+id/linearLayout11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/redeemCard1"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"

                            >
                            <TextView
                                android:layout_marginRight="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:textAlignment="center"


                                android:layout_marginTop="@dimen/space_15dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:fontFamily="@font/open_sans_semibold"
                                android:text="Joining Type"
                                android:layout_marginLeft="20dp"

                                android:textSize="15dp" />
                            <TextView
                                android:id="@+id/balance1"

                                android:textAlignment="center"
                                android:layout_marginTop="0dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                android:text="Single"
                                ></TextView>
                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"

                            >
                            <TextView
                                android:layout_marginRight="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"

                                android:textAlignment="center"
                                android:layout_marginTop="@dimen/space_15dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:fontFamily="@font/open_sans_semibold"
                                android:text="Board Type"
                                android:layout_marginLeft="20dp"

                                android:textSize="15dp" />
                            <TextView
                                android:id="@+id/in1valid1"
                                android:textAlignment="center"
                                android:layout_marginTop="0dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Ludo King"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                ></TextView>
                        </LinearLayout>
                    </LinearLayout>
                    ///
                    <LinearLayout

                        android:layout_marginTop="235dp"
                        android:id="@+id/linearL11ayout11111"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/rede11emCarfffd1"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"

                            >

                            <EditText
                                android:gravity="center_vertical"

                                android:enabled="false"
                                android:id="@+id/limit"
                                android:background="@drawable/bordd"
                                android:textAlignment="center"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textSize="15dp"
                                android:textColor="@color/black"

                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"

                                android:text="0 / 2"
                                ></EditText>

                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"

                            >

                            <Button
                                android:id="@+id/joinnow"
                                android:textAlignment="center"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Join Now"
                                android:textSize="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/bordd"
                                ></Button>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
android:visibility="gone"
                        android:layout_below="@+id/linearL11ayout11111"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textAlignment="viewStart"


                            android:layout_marginTop="@dimen/space_15dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Joining Type"
                            android:layout_marginLeft="20dp"

                            android:textSize="10dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>